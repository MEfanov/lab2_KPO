<UserControl x:Class="lab2_KPO.InputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lab2_KPO"
             mc:Ignorable="d">
    <StackPanel x:Name="FieldPanel">
        <TextBlock x:Name="FieldMessageBox"/>
        <TextBox x:Name="InputBox" Height="auto" Width="auto" TextChanged="InputBox_TextChanged"/>
    </StackPanel>
</UserControl>
